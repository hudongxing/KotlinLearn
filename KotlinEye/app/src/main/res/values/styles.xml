<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>

        <!-- ActionMode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/MP.Theme.Widget.ActionMode.CloseButton</item>

        <!-- AlertDialog -->
        <item name="alertDialogTheme">@style/AlertDialog</item>

        <!-- PopupMenu -->
        <item name="popupMenuStyle">@style/MP.Theme.Widget.PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.SmallPopupMenu</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/actionMode.background</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="backgroundSplit">@null</item>
        <item name="titleTextStyle">@style/ActionMode.Title</item>
        <item name="android:tint">@color/black</item>
    </style>
    <style name="ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="MP.Theme.Widget.ActionMode.CloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/colorPrimary</item>
    </style>
    <style name="AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/background</item>
    </style>
    <style name="MP.Theme.Widget.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/popupMenu.background</item>
        <item name="android:dropDownHorizontalOffset">-24dp</item>
    </style>


    <style name="TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.SmallPopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>



</resources>
